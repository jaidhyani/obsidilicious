{
  "manifest_version": 2,
  "name": "Obsidilicious",
  "version": "1.0",
  "description": "Save links to Obsidian using the local REST API plugin.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "*://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}